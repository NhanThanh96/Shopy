block main
  section.product-show
    .container
      .product-detail
        .row
          .col-12.col-md-5
            .carousel.slide.slideshow-gallery#slideshow-gallery(data-ride='carousel')
              .carousel-outer
                .carousel-inner
                    .carousel-item.active
                      .slideshow-gallery__carousel-item
                        img(
                          src= "images/product-detail1.png"
                          alt= "product detail image"
                        )
                    .carousel-item
