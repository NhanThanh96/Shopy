extends modules/layout/_page-default

block head
  +head('Shopy Product Show')
block main
  section.product-show
    .container
      .product-detail
        .row
          .col-12.col-md-5
            .carousel.slide.slideshow-gallery#slideshow-gallery(data-ride='carousel')
              .carousel-outer
                .carousel-inner
                    .carousel-item.active
                      .d-flex.align-items-center.justify-content-center
                        img(
                          src= "images/product1.png"
                          alt= "product detail image"
                        )
                    .carousel-item
                      .d-flex.align-items-center.justify-content-center
                        img(
                          src= "images/product2.png"
                          alt= "product detail image"
                        )
                    .carousel-item
                      .d-flex.align-items-center.justify-content-center
                        img(
                          src= "images/product3.png"
                          alt= "product detail image"
                        )
              ol.carousel-indicators
                li.slideshow-gallery__indicator.active(
                  data-target='#slideshow-gallery'
                  data-slide-to='0'
                )
                  img(
                    src= "images/product1.png"
                    alt= "product detail image"
                  )
                li.slideshow-gallery__indicator(
                  data-target='#slideshow-gallery'
                  data-slide-to='1'
                )
                  img(
                    src= "images/product2.png"
                    alt= "product detail image"
                  )
                li.slideshow-gallery__indicator(
                  data-target='#slideshow-gallery'
                  data-slide-to='2'
                )
                  img(
                    src= "images/product3.png"
                    alt= "product detail image"
                  )
          .col-12.col-md-7
