                  },
                  {
                    name: "brandFilter",
                    id: "brandAddias",
                    label: "Addias"
                  },
                  {
                    name: "brandFilter",
                    id: "brandNike",
                    label: "Nike"
                  },
                  {
                    name: "brandFilter",
                    id: "brandActive",
                    label: "Active"
                  }
                ]
              each item in brandFilter
                li.brands-filter__item
                  +group-input-radio({
                    name: item.name,
                    id: item.id,
                    label: item.label
                  })
