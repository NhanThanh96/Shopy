  section.products-content
    .container
      .row
        .col-12.col-md-3
          .categories
            h4.categories__title Categories
            ul.categories__list
              each item, index in ["Man", "Women", "Childrens", "Hot Deals"]
                li.categories__item
                  a(href="#")= item
          .price-filter
            h4.price-filter__title Price Filter
            .price-filter__feild
              input.js-price-range(
                type="text"
                class="span2"
                data-slider-min="100"
                data-slider-max="1100"
                data-slider-step="5"
                value="475,700" data-value="475,700"
                data-slider-value="[250,450]"
              )
            .price-filter__inner
              .price-filter__input-feild
                label(for= "lower-price") From
                input#lower-price(type="text")
              .price-filter__input-feild
                label(for= "upper-price") To
                input#upper-price(type="text")
          .sizes-filter
            h4.sizes-filter__title Size
            ul.sizes-filter__list
              -
                var sizeFilter = [
                  {
                    name: "sizeFilter",
                    id: "sizeSmallFilter",
                    label: "Small"
                  },
                  {
                    name: "sizeFilter",
                    id: "sizeMediumFilter",
                    label: "Medium"
                  },
                  {
                    name: "sizeFilter",
                    id: "sizeLargeFilter",
                    label: "Large"
                  },
                  {
                    name: "sizeFilter",
                    id: "sizeXLargeFilter",
                    label: "X Large"
                  }
                ]
              each item in sizeFilter
                li.sizes-filter__item
                  +group-input-radio({
                    name: item.name,
                    id: item.id,
                    label: item.label
                  })
          .brands-filter
            h4.brands-filter__title Brand
            ul.brands-filter__list
              -
