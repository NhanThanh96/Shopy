//-------------------------------------------------------
//- Modules :: Radio Button
//-------------------------------------------------------
mixin group-input-radio({name, id, label, checked})
  .form-group.input-radio-custom()&attributes(attributes)
    input.input-radio(
      type= 'radio'
      name= name ? `${name}` : null
      id= id ? `${id}` : null
      checked= checked ? 'checked' : null
    )
    label(for= id ? `${id}` : null)
      | #{label}
