//-------------------------------------------------------
//- Modules :: Header
//-------------------------------------------------------

mixin header(current)
  header.header
    .small-header
      .container
        .small-header__inner
          ul.list-inline.small-header__contact
            li.list-inline-item
              span.small-header__icon
                i.far.fa-envelope
              span.small-header__text info@shopy.com
            li.list-inline-item
              span.small-header__icon
                i.fas.fa-phone-volume
              span.small-header__text 453 - 5553 - 996
          ul.list-inline.small-header__social-network
            each item, index in ['fab fa-facebook-f', 'fab fa-twitter', 'fab fa-google-plus-g', 'fab fa-instagram']
              li.list-inline-item
                a.small-header__link(href="#")
                  i(class= item)
    .big-header
      .container
        .row
          .col-lg-2.big-header__logo
            a.navbar-brand(href="#")
              img(src="images/logoo.png", alt="shopy")
            button.navbar-toggler.d-md-block.d-lg-none.big-header__toggle-button(
              type="button"
              data-toggle="collapse"
              data-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            )
              span.navbar-toggler-icon
          .col-lg-10
            nav.navbar.navbar-expand-lg
              .collapse.navbar-collapse#navbarSupportedContent
                ul.navbar-nav.mr-auto
                  -
                    var navData = [
                      {
                        name: 'Home',
                        link: 'home.html',
                        active: true
                      },
                      {
                        name: 'Products',
                        link: 'SP-03-products.html'
                      },
                      {
                        name: 'Hot Deals',
                        link: '#'
                      },
                      {
                        name: 'About',
                        link: '#'
                      },
                      {
                        name: 'Contact',
                        link: '#'
                      }
                    ]
                  each item in navData
                    li.nav-item(class= (item.name == current) && 'active')
                      a.nav-link(href= item.link)= item.name
                .big-header__action
                  ul.list-inline
                    li.list-inline-item
                      form.search(action="#")
                        input.form-control.search__input(
                          type="search"
                          placeholder="Search"
                          aria-label="Search"
                        )
                    li.list-inline-item
                      .dropdown.show.profile
                        a.btn.dropdown-toggle.profile__button(
                          href="#"
                          role="button"
                          id="profile"
                          data-toggle="dropdown"
                          aria-haspopup="true"
                          aria-expanded="false"
                        )
                          i.far.fa-user
                        .dropdown-menu.dropdown-menu-right.profile__dropdown-menu(aria-labelledby="profile")
                          a.dropdown-item(href="#") Profile
                          a.dropdown-item(href="#") Logout
                    li.list-inline-item
                      .dropdown.cart
                        button.btn.dropdown-toggle.cart__button#cardDropdownButton(
                          type="button"
                          data-toggle="dropdown"
                          aria-haspopup="true"
                          aria-expanded="false"
                        )
                          i.fas.fa-shopping-cart
                          span.cart__amount 5
                        .dropdown-menu.dropdown-menu-right.cart__dropdown(aria-labelledby="cardDropdownButton")
                          ul.list-group.list-group-flush.cart__dropdown-list.js-cart-dropdown-scrollbar
                            -
                              var selectedProductList = [
                                {
                                  image: "images/product1.png",
                                  name: "Reebok Track Jacket",
                                  quantity: "2",
                                  price: "120$"
                                },
                                {
                                  image: "images/product2.png",
                                  name: "Reebok Track Jacket Jacket Jacket Jacket",
                                  quantity: "2",
                                  price: "120$"
                                },
                                {
                                  image: "images/product3.png",
                                  name: "Reebok Track Jacket",
                                  quantity: "2",
                                  price: "120$"
                                },
                                {
                                  image: "images/product1.png",
                                  name: "Reebok Track Jacket",
                                  quantity: "2",
                                  price: "120$"
                                },
                                {
                                  image: "images/product2.png",
                                  name: "Reebok Track Jacket",
                                  quantity: "2",
                                  price: "120$"
                                },
                                {
                                  image: "images/product3.png",
                                  name: "Reebok Track Jacket",
                                  quantity: "2",
                                  price: "120$"
                                }
                              ]
                            each item in selectedProductList
                              li.list-group-item.selected-product
                                a.selected-product__link(href="#")
                                  .selected-product__image
                                    img(src= item.image, alt="Selected product")
                                  .selected-product__body
                                    h5.selected-product__name= item.name
                                    .selected-product__info
                                      .selected-product__quantity Quantity: 
                                        span= item.quantity
                                      .selected-product__price Price: 
                                        span= item.price
                          .dropdown-footer
                            a(href="#") View Cart
