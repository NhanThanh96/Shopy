            .hero__inner
              span Price: 120$
              a.hero__order(href="#")
                i.fas.fa-shopping-cart
                | Order Now
  section.new-arrivals
    .container
      .new-arrivals__header
        h3.new-arrivals__heading
          span.cl-orange New 
          | Arrivals
        p.new-arrivals__desc Lorem Ipsum is simply dummy text of the printing and typesetting industry
      .new-arrivals__inner
        .row.new-arrivals__product-list
          -
            var newArrivalsData = [
              {
                image: "images/product1.png",
                name: "Reebok Track Jacket",
                price: "100$",
                size: "s - m - xl",
                color: ["red", "black", "blue", "green"]
              },
              {
                image: "images/product2.png",
                name: "Reebok Track Jacket",
                price: "100$",
                size: "s - m - xl",
                color: ["red", "black", "blue", "green"]
              },
              {
                image: "images/product3.png",
                name: "Reebok Track Jacket",
                price: "100$",
                size: "s - m - xl",
                color: ["red", "black", "blue", "green"]
              },
              {
                image: "images/product3.png",
                name: "Reebok Track Jacket",
                price: "100$",
                size: "s - m - xl",
                color: ["red", "black", "blue", "green"]
              }
            ]
          each item in newArrivalsData
            .col-md-3
              .card.product
                .product__image
                  a(href="#")
                    img.card-img-top(
                    src= item.image
                    alt="product new arrivals"
                    )
                .card-body
                  h5.product__title
                    a(href="#")= item.name
                  .product__price= item.price
                .product__summary
                  .product__size
                    span sizes : 
                    span= item.size
                  ul.list-inline.product__color
                    each val, index in item.color
                      li.list-inline-item
                        span.circle(
                          class= `circle--${val}`
                        )
                  hr.product__devider
                  ul.list-inline.product__action
                    li.list-inline-item
                      a.product__icon-link(href="#")
                        i.fas.fa-share-alt
                    li.list-inline-item
                      a.product__icon-link(href="#")
                        i.fas.fa-shopping-cart
                    li.list-inline-item
                      a.product__icon-link(href="#")
                        i.far.fa-heart
        .load-more
          ul.list-inline
            li.list-inline-item
              span.circle(
                class= `circle--sm circle--orange`
              )
            li.list-inline-item
              span.circle(
                class= `circle--sm circle--orange`
              )
            li.list-inline-item
              span.circle(
                class= `circle--sm circle--orange`
              )
  section.advertisment-section
    .container
      .row
        .col-12.col-md-6.banner
          img(src="images/hot-deal.jpg", alt="hot deal")
        .col-12.col-md-6.banner
          img(src="images/hot-deal.jpg", alt="advertisment")
  section.best-sales
    .container
      .best-sales__header
        h3.best-sales__heading
          span.cl-orange New 
          | Arrivals
        p.best-sales__desc Lorem Ipsum is simply dummy text of the printing and typesetting industry
      .best-sales__inner
        .row
          -
            var bestSaleData = [
              {
                image: "images/product-sm1.png",
                name: "Reebok Track Jacket",
                price: "100$"
              },
              {
                image: "images/product-sm1.png",
                name: "Reebok Track Jacket",
                price: "100$"
              },
              {
                image: "images/product-sm1.png",
                name: "Reebok Track Jacket",
                price: "100$"
              }
            ]
          each item in bestSaleData
            .col-md-4
              .card.product-sales
                .product-sales__inner
                  .product-sales__image
                    a(href="#")
                      img(src= item.image, alt="best sale")
                  .product-sales__content
                    h5.product-sales__title
                      a(href="#")= item.name
                    .product-sales__info
                      .rating
                        i.fa.fa-star
                        i.fa.fa-star
                        i.fa.fa-star
                        i.fa.fa-star
                      span.product-sales__price= item.price
                    .product-sales__add-cart
                      a(href="#")
                        i.fas.fa-shopping-cart.product-sales__icon
                        span add to cart
  section.news-letter
    .container
      .news-letter__inner
        .row.align-items-center
          .col-12.col-md-6
            .news-letter__content
              h3.news-letter__title News letter
              .news-letter__desc join us now to get all news and special offers
          .col-12.col-sm-6
            button.button.button--orange(type="button") join us





        
            

              
