extends modules/layout/_page-default

block head
  +head('Shopy')
block main 
  section.hero
    .carousel.slide#heroCarousel(data-ride="carousel")
      ul.carousel-indicators
        li.active(
          data-target="#heroCarousel"
          data-slide-to="0"
        )
        li(
          data-target="#heroCarousel"
          data-slide-to="1"
        )
        li(
          data-target="#heroCarousel"
          data-slide-to="2"
        )
      .carousel-inner
        .carousel-item.active
          img(
            src="images/banner.jpg"
            alt="Full winter kit"
          )
